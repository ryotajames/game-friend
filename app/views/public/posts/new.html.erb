<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

     <h1 class="card-header text-center">新規</h1>
　　　<%= form_with model: @post, url: customer_posts_path, method: :post, local: true do |f| %>

　　 <div class="form-group row">
      <label for="item_image" class="col-sm-3 col-form-label"><h4>画像</h4></label>
      <div class="col-sm-9">
       <%= f.file_field :image, accept: "image/*movie/*", class: "form-control" %>
      </div>
     </div>

　  <div class="form-group row">
      <label for="item_introduction" class="col-sm-3 col-form-label"><h4>説明</h4></label>
      <div class="col-sm-9">
       <%= f.text_area :post_introduction, placeholder: "ここに説明文を記述します", class: "form-control", style: "height: 150px;" %>
      </div>
    </div>

　　<div class="form-group row">
    　　<div class="col-sm-9 offset-sm-3">
            <%= f.submit "新規登録", class: "btn btn-outline-success btn-block mt-3" %>
　　　　</div>
    </div>
      <% end %>

    </div>
  </div>
</div>
