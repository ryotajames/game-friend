
  <h2><%= @group.group_name %>さんとのトークルーム</h2>


<%= link_to "一覧に戻る", public_posts_path %>

<div class="container">
  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <% if @myCustomerId == m.customer.id %>
        <div class="row justify-content-end mb-2">
          <div class="col-auto">
            <div class="card bg-primary text-white">
              <div class="card-body p-2">
                <p class="card-text"><%= m.body %></p> <!-- 修正: 'message' → 'body' -->
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row justify-content-start mb-2">
          <div class="col-auto">
            <div class="card bg-light">
              <div class="card-body p-2">
                <p class="card-text"><%= m.body %></p> <!-- 修正: 'message' → 'body' -->
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%#= debug @message %>
<%#= debug params %>


<%= form_with(model: [@room, @message], local: true) do |f| %>
  <div class="text-center">
    <%= f.text_field :body, placeholder: "メッセージを入力してください", size: 50, class: "form-text-field" %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <% if @group.present? %>
      <!-- グループ関連の隠しフィールドは必要な場合のみ使用 -->
      <%#= f.hidden_field :group_id, value: @group.id %>
    <% end %>
    <%= f.submit "送信", class: 'form-submit' %>
  </div>
<% end %>
