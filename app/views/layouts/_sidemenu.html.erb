<div class = "alert-info" style = "width: 206px;" >
    <% if customer_signed_in? %>
        <div class = "d-flex justify-content-center" >
            <%= link_to new_customer_post_path(current_customer) do %>
                <i class="fa-light fa-circle-plus font-size: 24px;" style="color: #003ca3;"></i>
            <% end %>
        </div>
        <%= link_to '新規投稿', new_customer_post_path(current_customer), class: "d-flex justify-content-center btn btn-info rounded-circle mt-3" %>
    <% else %>
    <% end %>
    <div class = "" >
    <% if current_page?(public_posts_path) %>
        <div class = "d-flex justify-content-center mt-5 " >
            <%= link_to 'ユーザー一覧', customers_path, class: "btn btn-light", style: "width:150px;" %><br />
        </div>
        <div class = "d-flex justify-content-center mt-5" >
            <%= link_to 'グループ一覧', groups_path, class: "btn btn-light", style: "width:150px;" %>
        </div>
        <% elsif current_page?(customers_path) %>
            <div class = "d-flex justify-content-center mt-5 " >
                <%= link_to '投稿一覧', public_posts_path, class: "btn btn-light", style: "width:150px;" %>
            </div>
            <div class = "d-flex justify-content-center mt-5 " >
                <%= link_to 'グループ一覧', groups_path, class: "btn btn-light", style: "width:150px;" %>
            </div>
        <% elsif current_page?(groups_path) %>
            <div class = "d-flex justify-content-center mt-5 " >
                <%= link_to '投稿一覧', public_posts_path, class: "btn btn-light", style: "width:150px;" %>
            </div>
            <div class = "d-flex justify-content-center mt-5 " >
                <%= link_to 'ユーザー一覧', customers_path, class: "btn btn-light", style: "width:150px;" %>
            </div>
        <% else %>
        <% end %>
    </div>

</div>
