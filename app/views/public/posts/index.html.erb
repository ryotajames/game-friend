<div class = "text-center mr-xl-5 mt-3" >
  <h2>投稿一覧</h2>
</div>

<div class = "d-flex justify-content-center" >
  <div class = "row col-8" >
    <% @posts.each do |a| %>
      <div class = "d-flex flex-column" >
        <div class = "ml-5" >
          <%= "＠" + a.customer.name %>
        </div>
        <%= image_tag a.image, size: "150x150", class: "mt-2 ml-5 mr-5 mb-3 rounded-circle" %>
        <div class = "ml-5 mb-4 d-inline-block text-truncate", style = "width: 100px;" >
          <%= link_to a.post_introduction, post_path(a) %>
        </div>
      </div>
    <% end %>
  </div>
</div>