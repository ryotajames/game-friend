<div class="nav-item col-2 ml-auto mr-auto">
  <%= form_with(url: public_search_path, local: true, method: :get, class: "d-flex") do |f| %>
    <%= f.text_field :word, class: "form-control me-2", style: "width: 140px;" %>
    <%= f.select :range, options_for_select([['ユーザー'], ['投稿'], ['グループ']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
    <%= button_tag(type: 'submit', class: "btn btn-light") do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>