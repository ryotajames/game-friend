<!DOCTYPE html>
<html>
  <head>
    <title>GameFriend</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/<%=ENV['KIT_CODE']%>.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless current_page?(root_path) %>
      <%= render 'layouts/header' %>
    <% end %>

    <div class = "d-flex" >
      <% unless current_page?(root_path) %>
        <%= render 'layouts/sidemenu', class: "" %>
      <% end %>

        <div class = "col" >
        <% unless current_page?(root_path) || current_page?(new_customer_session_path) || current_page?(new_customer_registration_path) || current_page?(about_path) || current_page?(admins_customers_path) || current_page?(admins_posts_path) %>
          <%= render 'layouts/serch' %>
        <% end %>
          <%= yield %>
        </div>

    </div>
    <% unless current_page?(root_path) %>
      <%= render 'layouts/footer', class: "" %>
    <% end %>
  </body>
</html>
