<div class = "row ml-5" >
  <table>
    <tbody>
      <tr>
        <th>プロフィールイメージ</th>
        <td><%= image_tag @customer.get_profile_image(100,100) %></td>
      </tr>
      <tr>
        <th>ユーザー名</th>
        <td><%= @customer.name %></td>
      </tr>
      <tr>
        <th>好きなゲーム</th>
        <td><%= @customer.main_game %></td>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= @customer.introduction %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
      <td>
        <% if @customer.is_deleted %>
          退会済み
          <%= link_to "有効にする", admins_comeback_path(@customer.id), method: :patch, class: "btn btn-success" %>
        <% else %>
          有効
          <%= link_to "退会させる", admins_withdraw_path(@customer.id), method: :patch, class: "btn btn-danger" %>
        <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class = "column mt-4" >
    <div class = "row" >
      <div>
        <p>フォロワー人数</p>
      </div>
      <%= @customer.followers.count %>
    </div>
    <div class = "row" >
      <div>
        <p>フォロー人数</p>
      </div>
      <%= @customer.followings.count %>
    </div>
  </div>
</div>