<h1><%= @group.name %></h1>

<div id="messages">
  <% @messages.each do |message| %>
    <div class="<%= 'my-message' if message.customer == current_customer %>">
      <p><%= message.customer.name %>: <%= message.message %></p>
    </div>
  <% end %>
</div>

<%= form_with(model: [@group, @message], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_area :message, class: 'form-control', placeholder: 'Type your message...' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Send', class: 'btn btn-primary' %>
  </div>
<% end %>