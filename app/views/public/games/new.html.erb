<%= form_with model: @game, url: games_path, method: :post do |f| %>
  <div>
    <label for="game_name" class="mr-3"><h5>ゲーム名</h5></label>
    <%= f.text_field :game_name, placeholder: "ゲーム名", class: "form-control form-control-sm" %>
  </div>
    <div>
      <%= f.submit "投稿内容に移る", class: "btn btn-outline-info" %>
  </div>
<% end %>